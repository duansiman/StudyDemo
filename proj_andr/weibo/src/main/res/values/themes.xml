<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="theme_fullScreen" parent="android:Theme.Black">
        <item name="android:windowNoTitle">true</item>
        <!-- 引用上面一个值 -->
        <item name="android:windowFullscreen">?android:windowNoTitle</item>
    </style>

    <style name="auth_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!--无windowframe框-->
        <item name="android:windowIsFloating">true</item><!--是否浮Activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--是否半透明-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>