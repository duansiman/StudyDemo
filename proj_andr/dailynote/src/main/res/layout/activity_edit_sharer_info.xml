<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.epdc.dailynote.ui.activity.SharerInfoActivity">

    <FrameLayout
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/widget_backgroud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_head"
            android:layout_gravity="right"
            android:src="@drawable/perm_group_personal_info"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:text="头像"
            android:gravity="center_vertical"
            android:layout_gravity="left|center_vertical"
            android:textSize="@dimen/FontSize18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <include layout="@layout/layout_horizontal_line"/>


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:background="@color/widget_backgroud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:text="昵称"
            android:id="@+id/text_name"
            android:textSize="@dimen/FontSize18"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_name"
            android:hint="输入昵称"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_name"
            android:layout_toEndOf="@+id/text_name" />


    </RelativeLayout>

    <include layout="@layout/layout_horizontal_line"/>

    <RelativeLayout
        android:padding="15dp"
        android:background="@color/widget_backgroud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="性别"
            android:id="@+id/text_sex"
            android:gravity="center_vertical"
            android:layout_gravity="left|center_vertical"
            android:textSize="@dimen/FontSize18"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_sex"
            android:hint="输入性别"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_sex"
            android:layout_toEndOf="@id/text_sex"/>

    </RelativeLayout>

    <include layout="@layout/layout_horizontal_line"/>

    <RelativeLayout
        android:padding="15dp"
        android:background="@color/widget_backgroud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="手机号码"
            android:id="@+id/text_phone"
            android:gravity="center_vertical"
            android:layout_gravity="left|center_vertical"
            android:textSize="@dimen/FontSize18"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_phone"
            android:hint="输入手机号码"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_phone"
            android:layout_toEndOf="@id/text_phone"/>

    </RelativeLayout>


</LinearLayout>
