<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epdc.gesture">

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GestureActivity" />
        <activity android:name=".ImageActivity" />
        <activity android:name=".ViewFlipperActivity" />
        <activity android:name=".GestureLibraryActivity"></activity>
        <activity
            android:name=".RecogniseGestureActivity"
            android:label="@string/title_activity_recognise_gesture"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".TTSActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
